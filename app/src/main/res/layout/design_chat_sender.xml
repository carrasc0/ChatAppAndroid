<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentChatSender"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end">

    <TextView
        android:id="@+id/textViewChatSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@+id/checkedImageView"
        android:background="@drawable/shape_chat_sender"
        android:gravity="end"
        android:padding="12dp"
        android:text="Hola"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/checkedImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/textViewChatSender"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_done_all_black_24dp" />

</RelativeLayout>
